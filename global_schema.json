{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simulator Categorization Schema",
  "type": "object",
  "properties": {
    "simulator_id": {
      "type": "string",
      "description": "Unique identifier for the simulator"
    },
    "name": {
      "type": "string",
      "description": "Name of the simulator"
    },
    "version": {
      "type": "string",
      "description": "Version of the simulator"
    },
    "category": {
      "type": "string",
      "description": "Category of the simulator",
      "enum": ["Genome-scale", "Metabolic", "Virtual Tissue", "Ecological Modeling", "Biogeochemical", "Other"]
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the simulator"
    },
    "platform": {
      "type": "string",
      "description": "Platform or environment where the simulator runs",
      "enum": ["Windows", "Linux", "MacOS", "Web-based", "Cross-platform"]
    },
    "input_formats": {
      "type": "array",
      "description": "List of supported input formats",
      "items": {
        "type": "string"
      }
    },
    "output_formats": {
      "type": "array",
      "description": "List of supported output formats",
      "items": {
        "type": "string"
      }
    },
    "developer": {
      "type": "string",
      "description": "Name of the developer or organization"
    },
    "license": {
      "type": "string",
      "description": "License type",
      "enum": ["Open-source", "Proprietary", "Freeware", "Commercial"]
    },
    "website": {
      "type": "string",
      "description": "Official website or repository URL"
    },
    "documentation": {
      "type": "string",
      "description": "URL to the documentation"
    },
    "last_updated": {
      "type": "string",
      "format": "date",
      "description": "Date when the simulator was last updated"
    },
    "objects": {
      "type": "array",
      "description": "Objects used or generated by the simulator",
      "items": {
        "type": "object",
        "properties": {
          "object_id": {
            "type": "string",
            "description": "Unique identifier for the object"
          },
          "name": {
            "type": "string",
            "description": "Name of the object"
          },
          "attributes": {
            "type": "array",
            "description": "List of attributes of the object",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["object_id", "name"]
      }
    },
    "processes": {
      "type": "array",
      "description": "Processes simulated or used in the simulator",
      "items": {
        "type": "object",
        "properties": {
          "process_id": {
            "type": "string",
            "description": "Unique identifier for the process"
          },
          "name": {
            "type": "string",
            "description": "Name of the process"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the process"
          }
        },
        "required": ["process_id", "name"]
      }
    },
    "boundaries": {
      "type": "object",
      "description": "Boundary conditions for the simulator",
      "properties": {
        "spatial": {
          "type": "string",
          "description": "Spatial boundary conditions"
        },
        "temporal": {
          "type": "string",
          "description": "Temporal boundary conditions"
        }
      }
    },
    "containment": {
      "type": "array",
      "description": "Containment relationships within the simulator",
      "items": {
        "type": "object",
        "properties": {
          "container_id": {
            "type": "string",
            "description": "ID of the containing object"
          },
          "contained_id": {
            "type": "string",
            "description": "ID of the contained object"
          }
        },
        "required": ["container_id", "contained_id"]
      }
    },
    "inheritance": {
      "type": "array",
      "description": "Inheritance relationships within the simulator",
      "items": {
        "type": "object",
        "properties": {
          "parent_id": {
            "type": "string",
            "description": "ID of the parent object"
          },
          "child_id": {
            "type": "string",
            "description": "ID of the child object"
          }
        },
        "required": ["parent_id", "child_id"]
      }
    },
    "orchestration": {
      "type": "array",
      "description": "Orchestration of processes and interactions within the simulator",
      "items": {
        "type": "object",
        "properties": {
          "orchestration_id": {
            "type": "string",
            "description": "Unique identifier for the orchestration"
          },
          "name": {
            "type": "string",
            "description": "Name of the orchestration"
          },
          "steps": {
            "type": "array",
            "description": "List of steps involved in the orchestration",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["orchestration_id", "name"]
      }
    }
  },
  "required": ["simulator_id", "name", "category", "description", "platform", "developer", "license"]
}
